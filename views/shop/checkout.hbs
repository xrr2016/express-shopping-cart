<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-2 col-sm-offet-3">
    <h1>Checket out</h1>
    <h4>Your Total: <strong>${{total}}</strong></h4>
    <div  id="payment-errors" class="alert alert-danger {{#if noError}} hidden {{/if}}">
      {{errMsg}}
    </div>
    <form class="" action="/checkout" method="post" id="cheackout-form">
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" value="" class="form-control" required>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" value="" class="form-control" required>
          </div>
        </div>
        <hr>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-name">Card Holder Name</label>
            <input type="text" id="card-name" value="" class="form-control" required>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-name">Credit Card Number</label>
            <input type="text" id="card-number" value="" class="form-control" required>
          </div>
        </div>

        <div class="col-xs-12">
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-month">Expiration Month</label>
                <input type="text"  value="" id="card-expiry-month" class="form-control">
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <label for="card-expiry-month">Expiration Year</label>
                <input type="text"  value="" id="card-expiry-year" class="form-control">
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12">
          <div class="form-group">
            <label for="card-cvc">CVC</label>
            <input type="text"  value="" id="card-cvc" class="form-control" required>
          </div>
        </div>
      </div>
      <button type="submit" id="submit" class="btn btn-success pull-right">Buy Now</button>
    </form>
  </div>
</div>
<script type="text/javascript" src="https://api.stripe.com"></script>
<script type="text/javascript" src="/javascripts/checkout.js"></script>
